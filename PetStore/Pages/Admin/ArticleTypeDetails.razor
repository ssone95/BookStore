@page "/admin/ArticleTypes/details/{id:long}"

@using PetStore.Models
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Routing
@using PetStore.Infrastructure

<h3 class="bg-info text-white text-center p-1">Details</h3>

<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>ID</th><td>@ArticleType.ArticleTypeId</td></tr>
        <tr><th>Name</th><td>@ArticleType.Name</td></tr>
        <tr><th>Description</th><td>@ArticleType.Description</td></tr>
    </tbody>
</table>

<NavLink class="btn btn-warning" href="@UrlTypeEnum.Edit.GetAdminUrl("ArticleTypes", ArticleType.ArticleTypeId)">Edit</NavLink>
<NavLink class="btn btn-secondary" href="@UrlTypeEnum.List.GetAdminUrl("ArticleTypes")">Back</NavLink>

@code {

    [Inject]
    public PetStore.Repository.IStoreRepository Repository { get; set; }

    [Parameter]
    public long Id { get; set; }

    public ArticleType ArticleType { get; set; }

    protected override void OnParametersSet()
    {
        ArticleType = Repository.ArticleTypes.FirstOrDefault(x => x.ArticleTypeId == Id);
    }
}
