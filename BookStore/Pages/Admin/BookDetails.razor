@page "/admin/books/details/{id:long}"

@using BookStore.Models
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.Routing
@using BookStore.Infrastructure 

<h3 class="bg-info text-white text-center p-1">Details</h3>

<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>ID</th><td>@Book.BookId</td></tr>
        <tr><th>Name</th><td>@Book.Name</td></tr>
        <tr><th>Description</th><td>@Book.Description</td></tr>
        <tr><th>Genre</th><td>@Book.Genre?.Name</td></tr>
        <tr><th>Price</th><td>@Book.Price.ToString("c")</td></tr>
    </tbody>
</table>

<NavLink class="btn btn-warning" href="@UrlTypeEnum.Edit.GetAdminUrl("Books", Book.BookId)">Edit</NavLink>
<NavLink class="btn btn-secondary" href="@UrlTypeEnum.List.GetAdminUrl("Books")">Back</NavLink>

@code {

    [Inject]
    public BookStore.Repository.IStoreRepository Repository { get; set; }

    [Parameter]
    public long Id { get; set; }

    public Book Book { get; set; }

    protected override void OnParametersSet()
    {
        Book = Repository.Books.FirstOrDefault(x => x.BookId == Id);
    }
}
